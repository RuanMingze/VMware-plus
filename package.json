{
  "name": "vmware-plus-plus",
  "version": "1.0.0",
  "description": "VMware++ 修改器 - Electron版本",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --win --x64",
    "dist:portable": "electron-builder --win portable --x64",
    "pkg": "pkg . --targets node16-win-x64 --output dist-single/vmware-plus-plus.exe"
  },
  "pkg": {
    "assets": [
      "node_modules/**/*",
      "app/**/*"
    ],
    "targets": [
      "node16-win-x64"
    ]
  },
  "build": {
    "appId": "com.example.vmwareplusplus",
    "productName": "VMware++ 修改器",
    "directories": {
      "output": "dist-electron"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "VMware.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "VMware.ico",
      "uninstallerIcon": "VMware.ico",
      "installerHeaderIcon": "VMware.ico"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe",
      "useZip": true
    }
  },
  "keywords": [
    "VMware",
    "modifier",
    "electron"
  ],
  "author": "VMware++ Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^21.0.0",
    "electron-builder": "^23.0.0",
    "pkg": "^5.8.0"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "fs-extra": "^10.1.0",
    "rimraf": "^3.0.2"
  },
  "bin": "launcher.js"
}